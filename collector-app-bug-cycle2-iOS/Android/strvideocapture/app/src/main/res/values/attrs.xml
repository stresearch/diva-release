<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- These are attributes for the LabelledSpinner component -->
    <declare-styleable name="LabelledSpinner" >

        <!-- The text that is displayed on the floating label -->
        <attr name="labelText" format="string" />
        <!-- Specifies the color of the label and the bottom line -->
        <attr name="widgetColor" format="color" />

        <!-- Sets the array to be displayed on the Spinner -->
        <attr name="entries" format="reference" />

        <!-- Controls whether an error is shown if the first item (which
        would be a prompt) is selected and has not been changed -->
        <attr name="defaultErrorEnabled" format="boolean" />

    </declare-styleable>
    <declare-styleable name="CustomSeekBar">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="arrowLineWidth" format="dimension" />
        <attr name="arrowLineHeight" format="dimension" />
        <attr name="showText" format="boolean" />
        <attr name="showArrows" format="boolean" />
        <attr name="showProgressOnOnClick" format="boolean" />
        <attr name="showDummyData" format="boolean" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="arrowColor" format="color" />
    </declare-styleable>
</resources>