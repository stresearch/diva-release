<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="@color/black_transparent_color">

    <LinearLayout
        android:id="@+id/rating_questionnaire_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/questionnaire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            tools:text="@string/consent_description_text"
            android:layout_gravity="center"
            android:textColor="@android:color/white"/>


        <ImageView
            android:id="@+id/upVoteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.15"
            android:src="@drawable/up_vote_white" />

        <ImageView
            android:id="@+id/downVoteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.15"
            android:src="@drawable/down_vote_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/semiSmallMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/running_time_textview"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinssemibold"
            android:text="00.00"
            android:gravity="center"
            android:textColor="@color/textLightColor"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:theme="@style/MySeekBar"/>

        <TextView
            android:id="@+id/total_time_textview"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:text="00.00"
            android:gravity="center"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/textLightColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:paddingTop="@dimen/semiSmallMargin"
            android:paddingBottom="@dimen/semiSmallMargin"
            android:layout_marginStart="@dimen/minuteMargin"
            android:textColor="@android:color/white"
            android:background="@drawable/view_gold_baground"/>
        <TextView
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:text="@string/submit"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:layout_marginStart="@dimen/minuteMargin"
            android:textColor="@android:color/white"
            android:background="@drawable/view_gold_baground"/>

    </LinearLayout>

    <TextView
        android:id="@+id/training_video_hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/training_video_hint_text"
        android:padding="@dimen/semiSmallMargin"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/poppinsregular" />

</LinearLayout>